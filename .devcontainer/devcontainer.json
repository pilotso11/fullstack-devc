{
  "name": "Full Stack Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.mypy-type-checker",
        "charliermarsh.ruff",
        "golang.go",
        "oven.bun-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3.13",
        "python.languageServer": "Pylance",
        "python.linting.mypyEnabled": true,
        "python.linting.enabled": true,
        "python.testing.pytestEnabled": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit",
          },
        },
        "go.toolsManagement.autoUpdate": true,
        "go.lintTool": "golangci-lint",
        "go.lintOnSave": "workspace",
        "[go]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
          },
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true,
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true,
        },
      },
    },
  },
  "postCreateCommand": "bash -c 'if [ -f requirements.txt ]; then uv pip install --system -r requirements.txt; fi && if [ -f go.mod ]; then go mod download; fi && if [ -f package.json ]; then bun install; fi'",
  "remoteUser": "developer",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  ],
  "workspaceFolder": "/workspace",
  "features": {},
  "forwardPorts": [3000, 8000, 8080, 5173],
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "onAutoForward": "notify",
    },
    "8000": {
      "label": "Backend API",
      "onAutoForward": "notify",
    },
  },
}
